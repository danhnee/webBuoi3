@model myMvcApp.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Student Registration";
}

<h1>Student Registration</h1>

<form asp-action="Register" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <label asp-for="MaSinhVien" class="form-label"></label>
        <input asp-for="MaSinhVien" class="form-control" />
        <span asp-validation-for="MaSinhVien" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="TenSinhVien" class="form-label"></label>
        <input asp-for="TenSinhVien" class="form-control" />
        <span asp-validation-for="TenSinhVien" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DiemTrungBinh" class="form-label"></label>
        <input asp-for="DiemTrungBinh" class="form-control" />
        <span asp-validation-for="DiemTrungBinh" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ChuyenNganh" class="form-label"></label>
        <select asp-for="ChuyenNganh" class="form-select">
            <option value="">-- Chọn chuyên ngành --</option>
            <option value="CNPT">CNPT</option>
            <option value="HTTT">HTTT</option>
            <option value="TTNT">TTNT</option>
            <option value="MMT">MMT</option>
        </select>
        <span asp-validation-for="ChuyenNganh" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}